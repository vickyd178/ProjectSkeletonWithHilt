<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The outline turns to colorPrimary when the EditText is in focus-->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorEditTextBackgroundFocused" />
            <corners android:radius="5dp" />
            <stroke android:width="3px" android:color="@color/colorEditTextBackgroundEnabled" />
        </shape>
    </item>

    <!--The outline turns to grey when the EditText is out of focus-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorEditTextBackgroundEnabled" />
            <corners android:radius="5dp" />
            <stroke android:width="3px" android:color="@color/colorEditTextBackgroundFocused" />

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorEditTextBackgroundDisabled" />
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>